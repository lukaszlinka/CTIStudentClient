<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lukasz.ctistudentclient.Fragments.SendPlaceFragment">

    <LinearLayout
    android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:id="@+id/send_place_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Piętro:"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="24dp" />

        <EditText
android:id="@+id/send_place_level_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:text="@string/login_activity_loginText"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/send_place_room"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_width="wrap_content"
        android:layout_below="@id/send_place_level"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Najbliższa sala:"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="24dp" />

        <EditText

            android:id="@+id/send_place_room_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:text="@string/login_activity_loginText"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/send_place_description"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_width="match_parent"
        android:layout_below="@id/send_place_room"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opis miejsca:"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/send_place_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="200dp"
            android:text="@string/login_activity_loginText"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:textSize="22dp" />
    </LinearLayout>
