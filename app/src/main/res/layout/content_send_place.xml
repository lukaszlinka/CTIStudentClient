<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/send_mainLayout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24dp">


    <LinearLayout
        android:id="@+id/send_place_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Piętro:"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="24dp" />

        <EditText

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:text="@string/profile_loginText"
            android:textColor="@android:color/black"
            android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/send_place_room"
        android:layout_width="wrap_content"
        android:layout_below="@id/send_place_level"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Najbliższa sala:"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="24dp" />

        <EditText

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:text="@string/profile_loginText"
            android:textColor="@android:color/black"
            android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/send_place_description"
        android:layout_width="match_parent"
        android:layout_below="@id/send_place_room"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opis miejsca:"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="24dp" />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="200dp"
            android:text="@string/profile_loginText"
            android:textColor="@android:color/black"
            android:textSize="22dp" />
    </LinearLayout>
    <Button
        android:id="@+id/profile_logoutBtn"
        android:layout_width="match_parent"
        android:layout_below="@id/send_place_description"
        android:layout_height="wrap_content"
        android:text="Dalej"
        android:layout_marginBottom="12dp"/>
</RelativeLayout>